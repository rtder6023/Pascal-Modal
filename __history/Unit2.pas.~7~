unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm2 = class(TForm)
    ButtonOK: TButton;
    ButtonCancel: TButton;
    procedure ButtonOKClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}

// 모달 폼의 종료 버튼 클릭 이벤트
procedure TForm2.ButtonOKClick(Sender: TObject);
begin
  ModalResult := mrOK; // 확인 버튼을 눌렀을 때 mrOK 값을 설정
  Close; // 폼을 닫습니다. ModalResult 값이 자동으로 설정된 후 Close()가 호출됩니다.
end;

// 모달 폼의 취소 버튼 클릭 이벤트


end.
